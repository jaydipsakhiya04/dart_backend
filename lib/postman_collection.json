{
    "info": {
      "_postman_id": "jaydip_dart_e_commerce_api",
      "name": "Jaydip Dart Shelf E-commerce API",
      "description": "Complete Postman collection for the Dart + Shelf + SQLite3 REST API (Users, Products, Orders)",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "Users",
        "description": "User management endpoints",
        "item": [
          {
            "name": "Get All Users",
            "request": {
              "method": "GET",
              "header": [],
              "url": {
                "raw": "{{baseUrl}}/api/user/getAllUsers",
                "host": ["{{baseUrl}}"],
                "path": ["api", "user", "getAllUsers"]
              },
              "description": "Returns list of all registered users"
            }
          },
          {
            "name": "Get User by ID",
            "request": {
              "method": "GET",
              "header": [],
              "url": {
                "raw": "{{baseUrl}}/api/user/getUser/1",
                "host": ["{{baseUrl}}"],
                "path": ["api", "user", "getUser", "1"]
              },
              "description": "Replace `:id` with actual user ID"
            }
          },
          {
            "name": "Create New User",
            "request": {
              "method": "POST",
              "header": [
                { "key": "Content-Type", "value": "application/json" }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"phone\": \"+1234567890\"\n}"
              },
              "url": {
                "raw": "{{baseUrl}}/api/user/createUser",
                "host": ["{{baseUrl}}"],
                "path": ["api", "user", "createUser"]
              },
              "description": "Creates a new user (createdAt is auto-filled)"
            }
          },
          {
            "name": "Update User",
            "request": {
              "method": "PUT",
              "header": [
                { "key": "Content-Type", "value": "application/json" }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"name\": \"John Updated\",\n  \"email\": \"john.updated@example.com\",\n  \"phone\": \"+1999999999\"\n}"
              },
              "url": {
                "raw": "{{baseUrl}}/api/user/updateUser/1",
                "host": ["{{baseUrl}}"],
                "path": ["api", "user", "updateUser", "1"]
              },
              "description": "Replace `:id` with actual user ID"
            }
          },
          {
            "name": "Delete User",
            "request": {
              "method": "DELETE",
              "header": [],
              "url": {
                "raw": "{{baseUrl}}/api/user/deleteUser/1",
                "host": ["{{baseUrl}}"],
                "path": ["api", "user", "deleteUser", "1"]
              },
              "description": "Replace `:id` with actual user ID"
            }
          }
        ]
      },
